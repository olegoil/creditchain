<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.hmmmk.creditchain.AcceptActivity">

    <LinearLayout
        android:id="@+id/accept_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подтвердите участие в цепочке"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#000"
            android:padding="20dp"
            android:layout_weight="0"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/photo_2018_04_22_16_38_05"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:padding="4dp">

            <Button
                android:id="@+id/accept_btn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="Принять"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/decline_btn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Отменить"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
<!-->////////////////////////////////////////////////////////////////////<!-->
    <LinearLayout
        android:id="@+id/good_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Кредит уменьшился"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#000"
            android:padding="20dp"
            android:layout_weight="0"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/stickerl"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/right"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/stickerlfff"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:padding="4dp">

            <Button
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="Принять"
                android:layout_weight="1"/>

            <Button
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Отменить"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <!-->////////////////////////////////////////////////////////////////////<!-->
    <LinearLayout
        android:id="@+id/bad_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#000"
            android:padding="20dp"
            android:layout_weight="0"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/photo_2018_04_22_16_38_23"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:padding="4dp">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/holo_green_light"
                android:text="Принять"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Отменить"
                android:layout_weight="1"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
